{
  "name": "create-snowflake-worksheets",
  "displayName": "create snowflake worksheets",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/KuragariKurage/vscode-create-snowflake-worksheet.git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:workbench-view-extension-createSnowflakeWorksheet"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "create-snowflake-worksheets.createSnowflakeWorksheet",
        "title": "Create New Snowflake Worksheet"
      }
    ],
    "configuration": {
      "title": "Create Snowflake Worksheets",
      "properties": {
        "create-snowflake-worksheets.savePath": {
          "type": "string",
          "default": "",
          "description": "保存先のパスを指定します。"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "worksheet-explorer",
          "name": "Snowflake Worksheets",
          "when": "explorerResourceIsFolder && explorerResourceIsRoot && explorerViewletVisible && !inputFocus",
          "contextMenuGroupId": "worksheet-explorer",
          "contextMenuOrder": 10
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workbench-view-extension-createSnowflakeWorksheet",
          "title": "Snowflake Worksheets",
          "icon": "resources/extension.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
